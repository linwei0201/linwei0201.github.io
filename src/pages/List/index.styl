.blogs-wrapper
  width 1000px
  margin 0 auto
  padding 0 80px 80px
  margin-bottom 30px
  .post-preview
    padding 20px 0
    border-bottom 1px solid #eee
    a
      color #404040
      text-decoration none
      &:hover
        color #0085a1
    .post-subtitle
      font-size 16px
      font-weight normal
    .post-meta
      font-family Lora,'Times New Roman',serif
      color gray
      font-size 18px
      font-style italic
      margin-top 0
    .post-content-preview
      font-style italic
      font-size 14px
      line-height 24px
      font-weight normal
      color #a3a3a3
      margin 10px auto
      &:hover
        color #0085a1

@media (max-width: 375px)
  .blogs-wrapper
    width 375px
    padding 0 20px
@media (max-width: 414px )
  .blogs-wrapper
    width 414px
    padding 0 20px